{
  "name": "@drivej/leaves-animation",
  "version": "1.0.0",
  "description": "A beautiful falling leaves and snow animation using PixiJS with React support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "vite build --config vite.config.build.ts && npm run build:types",
    "build:types": "tsc --project tsconfig.json --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "pixi.js": "^8.15.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.0.0",
    "vite": "^6.0.7"
  },
  "keywords": [
    "pixi",
    "pixijs",
    "animation",
    "leaves",
    "snow",
    "particles",
    "react",
    "typescript"
  ],
  "author": "drivej",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drivej/leaves-animation.git"
  }
}
